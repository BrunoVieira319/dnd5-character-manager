<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attribute"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/buttonUp"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonDown"
            android:fontFamily="@font/expletus_sans_semibold" android:textColor="#444444"/>
    <TextView
            android:text="15"
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:id="@+id/value" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.454" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/expletus_sans_semibold"
            android:textColor="#353535"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp" app:srcCompat="@drawable/arrow"
            android:id="@+id/buttonUp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toEndOf="@+id/value"
            android:layout_marginStart="32dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
            android:tint="#3F51B5" android:rotation="180"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp" app:srcCompat="@drawable/arrow"
            android:id="@+id/buttonDown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" android:tint="#B61E18"/>
</androidx.constraintlayout.widget.ConstraintLayout>