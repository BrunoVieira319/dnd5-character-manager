<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PointBuyActivity">
    <TextView
            android:text="Distribute Your Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:textSize="36sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Dexterity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dexterity" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/strength" android:textSize="36sp"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Constitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/constitution" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/dexterity" android:textSize="36sp"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="Intelligence"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/intelligence" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="36sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/constitution"/>
    <TextView
            android:text="Wisdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wisdom" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="36sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/intelligence"/>
    <TextView
            android:text="Charisma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/charisma" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="36sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/wisdom"/>
    <TextView
            android:text="Strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/strength" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/title" android:layout_marginTop="60dp" android:textSize="36sp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDexterity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerStrength" android:layout_marginTop="50dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerIntelligence" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerConstitution" android:layout_marginTop="50dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerWisdom" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerIntelligence" android:layout_marginTop="50dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCharisma" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerWisdom" android:layout_marginTop="50dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerConstitution" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDexterity" android:layout_marginTop="50dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerStrength" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="70dp" app:layout_constraintTop_toBottomOf="@+id/title"/>
</androidx.constraintlayout.widget.ConstraintLayout>